<h1> <%= @article.title %> </h1>

<h2> <%= @test %> </h2>

<p> <%= @article.body %> </p>

<ul>
  <li><%= link_to "Edit", edit_article_path(@article) %></li>
  <li>
    <%= link_to "Destroy", article_path(@article), data: {
                    turbo_method: :delete,
                    turbo_confirm: "Are tou sure?"} %>
  </li>
</ul>

<%= link_to '<< Back to Articles', articles_path %>

<h2>Comments</h2>
<%= render @article.comments %>


<h2>Add a Comment:</h2>

<%= render 'comments/form' %>

